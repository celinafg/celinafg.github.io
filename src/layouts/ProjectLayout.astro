---
import type { ProjectLayoutProps } from "../types";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TableOfContents from "../components/TOCHeading.astro";
import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../config";

const {
  image,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  ogType,
  groupedHeadings,
} = Astro.props as ProjectLayoutProps;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      ogType={ogType}
    />
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <div class="site-wrapper">
      <div class="cont border-t">
        <Header />
      </div>
      <div class="project-container">
        <aside class="sidebar">
          <TableOfContents headings={groupedHeadings} />
        </aside>
        <main class="main-content">
          <div class="content-wrapper">
            <slot />
          </div>
        </main>
      </div>
      <Footer class="footer" />
    </div>
  </body>
</html>

<style>
  .site-wrapper {
    min-height: 100vh;
    background-color: var(--bg-primary);
  }

  .project-container {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 3rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    min-height: calc(100vh - 60px);
  }

  .sidebar {
    position: relative;
  }

  .main-content {
    padding: 3rem;
    max-width: 80vw;
    margin: 0 auto;
  }

  .content-wrapper {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid var(--accent-color);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .content-wrapper :global(h1),
  .content-wrapper :global(h2) {
    position: relative;
    font-family: "Space Mono", monospace;
  }

  .content-wrapper :global(h1) {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 2rem;
  }

  .content-wrapper :global(h2) {
    font-size: 1.75rem;
    color: #333;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .content-wrapper :global(h3) {
    font-family: "Space Mono", monospace;
    font-size: 1.25rem;
    color: #444;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .content-wrapper :global(p) {
    font-family: "Work Sans", sans-serif;
    font-size: 1rem;
    line-height: 1.7;
    color: #444;
    margin-bottom: 1.5rem;
  }

  @media (max-width: 1024px) {
    .project-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .sidebar {
      border-bottom: 1px solid var(--accent-color);
      margin-bottom: 2rem;
    }

    .main-content {
      padding: 0;
      max-width: 90vw;
    }
  }

  @media (max-width: 768px) {
    .project-container {
      padding: 0 1rem;
    }

    .content-wrapper {
      padding: 1.5rem;
    }

    .content-wrapper :global(h1) {
      font-size: 2rem;
    }

    .content-wrapper :global(h2) {
      font-size: 1.5rem;
    }
  }
</style>
