---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/main.scss";

import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../config";
const {
  image,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  includeSidebar = true,
  sideBarActiveItemID,
  ogType,
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head class="cont with-lines">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>HELLO VISITOR</title>
  </head>

  <body class="flex flex-col min-h-screen bgc">
    <main class="cont with-lines border">
      <Header class="white-container border-t" currentPath={currentPath} />

      <slot />
    </main>
    <div class="footer-border"><Footer /></div>
  </body><style>
    .bgc {
      background-color: #f5fff2;
    }
  </style>
</html>
