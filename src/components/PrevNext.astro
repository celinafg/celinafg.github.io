---
import type { CollectionEntry } from "astro:content";

interface Props {
  prev: CollectionEntry<"projects"> | null;
  next: CollectionEntry<"projects"> | null;
}

const { prev, next } = Astro.props;
---

<nav class="prev-next-navigation" aria-label="Project navigation">
  <div class="prev-next-container">
    {
      prev && (
        <a href={`/projects/${prev.slug}`} class="nav-card prev-post">
          <div class="nav-content">
            <span class="nav-arrow">←</span>
            <div class="nav-text">
              <span class="nav-label">Previous Project</span>
              <span class="post-title">{prev.data.title}</span>
            </div>
          </div>
        </a>
      )
    }

    {
      next && (
        <a href={`/projects/${next.slug}`} class="nav-card next-post">
          <div class="nav-content">
            <div class="nav-text">
              <span class="nav-label">Next Project</span>
              <span class="post-title">{next.data.title}</span>
            </div>
            <span class="nav-arrow">→</span>
          </div>
        </a>
      )
    }
  </div>
</nav>

<style>
  .prev-next-navigation {
    margin: 4rem auto 2rem;
    padding: 2rem 2rem 0 2rem;
    border-top: 1px solid var(--border-color, #e2e8f0);
    max-width: 1200px;
  }

  .prev-next-container {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
  }

  .nav-card {
    padding: 4rem 1.25rem;
    background-color: var(--card-bg, #ffffff);
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    max-width: 300px;
    width: 100%;
  }

  .nav-card:hover {
    transform: translateY(-2px);
  }

  .nav-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .nav-arrow {
    font-size: 1.25rem;
    font-weight: 300;
    color: var(--accent-color, #3182ce);
    flex-shrink: 0;
  }

  .nav-text {
    display: flex;
    flex-direction: column;
    flex: 1;
    min-width: 0;
  }

  .next-post .nav-content {
    text-align: right;
  }

  .nav-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted, #718096);
    margin-bottom: 0.25rem;
    font-weight: 500;
  }

  .post-title {
    font-weight: 600;
    font-size: 0.95rem;
    line-height: 1.4;
    color: var(--text-heading, #2d3748);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  @media (min-width: 768px) {
    .prev-post {
      margin-right: 1rem;
    }

    .next-post {
      margin-left: 1rem;
    }

    .prev-next-container:has(.prev-post:only-child) .prev-post {
      margin-right: auto;
    }

    .prev-next-container:has(.next-post:only-child) .next-post {
      margin-left: auto;
    }
  }

  @media (max-width: 767px) {
    .prev-next-container {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .nav-card {
      max-width: 100%;
    }
  }
</style>
