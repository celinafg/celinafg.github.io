---
interface Props {
  url: string;
  height?: string;
  width?: string;
}

const { url, height = "450px", width = "100%" } = Astro.props;
---

<div class="figma-embed">
  <iframe
    src={`https://www.figma.com/embed?embed_host=share&url=${url}`}
    style={`width: ${width}; height: ${height};`}
    allowfullscreen></iframe>
</div>
