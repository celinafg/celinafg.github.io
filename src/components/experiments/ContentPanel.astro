---
export interface Props {
  defaultTitle?: string;
  defaultContent?: string;
}

const {
  defaultTitle = "Select an experiment",
  defaultContent = "Click on an experiment from the grid to view details.",
} = Astro.props;
---

<div class="content-panel" id="contentPanel">
  <div class="content-wrapper">
    <h1 id="experimentTitle">{defaultTitle}</h1>
    <div class="content-body" id="contentBody">
      <p>{defaultContent}</p>
    </div>
  </div>
</div>s
