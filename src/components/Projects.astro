---
export interface Project {
  slug: string;
  data: {
    title: string;
    description?: string;
    image?: string;
  };
}

export interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<section id="projects" class="project-section">
  <div class="project-container">
    <h2 class="heading-mono text-4xl mb-16 text-center">
      projects
      <span
        class="block w-16 h-0.5 bg-[#a7ff83] mx-auto mt-4 transition-all duration-300 hover:w-24"
      ></span>
    </h2>
    <div class="projects-grid">
      {
        projects.map((project) => (
          <article class="project-item">
            <a href={`/projects/${project.slug}`} class="project-link">
              <div class="image-container">
                {project.data.image && (
                  <img
                    src={project.data.image}
                    alt={project.data.title}
                    class="project-image"
                  />
                )}
                <div class="image-overlay">
                  <span class="view-project">View Project â†’</span>
                </div>
              </div>
              <div class="project-info">
                <h3 class="project-title">{project.data.title}</h3>
                {project.data.description && (
                  <p class="project-description">{project.data.description}</p>
                )}
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .project-section {
    position: relative;
    padding: 6rem 2rem;
    background: #f9f9f9;
  }

  .project-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .heading-mono {
    font-family: "Space Mono", monospace;
    color: var(--text-primary);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
    padding: 1rem 0;
  }

  .project-item {
    position: relative;
    background-color: white;
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Gradient border effect */
  .project-item::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    padding: 2px;
    background: linear-gradient(
      120deg,
      rgba(167, 255, 131, 0.3),
      rgba(255, 255, 255, 0.1),
      rgba(167, 255, 131, 0.3)
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .project-item:hover {
    transform: translateY(-4px);
    box-shadow:
      0 8px 24px rgba(167, 255, 131, 0.1),
      0 4px 8px rgba(0, 0, 0, 0.05);
  }

  .project-item:hover::before {
    opacity: 1;
  }

  .project-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .image-container {
    position: relative;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0),
      rgba(167, 255, 131, 0.1)
    );
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.4s ease;
  }

  .view-project {
    font-family: "Space Mono", monospace;
    color: var(--text-primary);
    font-size: 0.875rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 2rem;
    transform: translateY(20px);
    transition: all 0.3s ease;
  }

  .project-item:hover .project-image {
    transform: scale(1.05);
  }

  .project-item:hover .image-overlay {
    opacity: 1;
  }

  .project-item:hover .view-project {
    transform: translateY(0);
  }

  .project-info {
    padding: 1.75rem;
    background: white;
  }

  .project-title {
    font-family: "Space Mono", monospace;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .project-description {
    font-family: "Work Sans", sans-serif;
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
    opacity: 0.85;
    transition: opacity 0.3s ease;
  }

  .project-item:hover .project-description {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .project-section {
      padding: 4rem 1rem;
      width: 100%;
    }

    .project-info {
      padding: 1.25rem;
    }
  }
</style>
