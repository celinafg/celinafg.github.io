---
import type { GroupedHeading } from "../types";

interface Props {
  headings: GroupedHeading[];
}

const { headings } = Astro.props;
---

<div class="toc-wrapper">
  <nav class="project-nav" aria-label="Table of Contents">
    <div class="nav-header">
      <div class="terminal-dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <h2 class="nav-title">/contents/</h2>
    </div>
    <ul class="nav-list">
      {
        headings.map((h2) => (
          <li class="nav-item">
            <details class="nav-details">
              <summary class="nav-h2">
                <span class="toggle-icon">+</span>
                <a href={`#${h2.slug}`}>{h2.text}</a>
              </summary>
              {h2.subheadings.length > 0 && (
                <ul class="nav-sublist">
                  {h2.subheadings.map((h3) => (
                    <li class="nav-subitem">
                      <span class="bullet" />
                      <a href={`#${h3.slug}`}>{h3.text}</a>
                    </li>
                  ))}
                </ul>
              )}
            </details>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<style>
  .toc-wrapper {
    position: sticky;
    top: 0;
    height: 100vh;
    padding: 2rem 0;
  }

  .project-nav {
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--accent-color) transparent;
  }

  .project-nav::-webkit-scrollbar {
    width: 4px;
  }

  .project-nav::-webkit-scrollbar-thumb {
    background-color: var(--accent-color);
    border-radius: 4px;
  }

  .nav-header {
    background: #f3f3f3;
    border: 1px solid var(--accent-color);
    border-radius: 8px 8px 0 0;
    padding: 0.5rem 1rem;
    margin-bottom: 1rem;
    position: sticky;
    top: 0;
    z-index: 2;
  }

  .terminal-dots {
    display: flex;
    gap: 6px;
    margin-bottom: 8px;
  }

  .terminal-dots span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .terminal-dots span:nth-child(1) {
    background: #ff6b6b;
  }
  .terminal-dots span:nth-child(2) {
    background: #ffd93d;
  }
  .terminal-dots span:nth-child(3) {
    background: #6bcb77;
  }

  .nav-title {
    font-family: "Space Mono", monospace;
    font-size: 1.25rem;
    color: #333;
    margin: 0;
  }

  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-item {
    margin-bottom: 0.75rem;
  }

  .nav-details {
    margin: 0;
    padding: 0;
  }

  .nav-h2 {
    cursor: pointer;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    border-radius: 4px;
    font-family: "Space Mono", monospace;
  }

  .toggle-icon {
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(167, 255, 131, 0.2);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .nav-details[open] .toggle-icon {
    transform: rotate(45deg);
    background: var(--accent-color);
    color: white;
  }

  .nav-h2 a {
    color: #333;
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-h2:hover {
    background: rgba(167, 255, 131, 0.1);
  }

  .nav-sublist {
    list-style: none;
    padding-left: 1.5rem;
    margin: 0.5rem 0;
  }

  .nav-subitem {
    margin: 0.5rem 0;
  }

  .bullet {
    display: inline-block;
    width: 4px;
    height: 4px;
    background: var(--accent-color);
    margin-right: 8px;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .nav-subitem:hover .bullet {
    opacity: 1;
  }

  .nav-subitem a {
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
    font-family: "Work Sans", sans-serif;
    transition: color 0.2s ease;
  }

  .nav-subitem a:hover {
    color: #065f46;
  }

  @media (max-width: 1024px) {
    .toc-wrapper {
      position: relative;
      height: auto;
      padding: 0;
    }

    .project-nav {
      max-height: none;
    }
  }
</style>

<script>
  document.querySelectorAll(".nav-subitem a, .nav-h2 a").forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const targetId = link.getAttribute("href")?.slice(1);
      if (targetId) {
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: "smooth" });
          history.pushState(null, "", `#${targetId}`);
        }
      }
    });
  });
</script>
