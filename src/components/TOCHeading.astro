---
import type { GroupedHeading } from "../types";

interface Props {
  headings: GroupedHeading[];
}

const { headings } = Astro.props;
---

<div class="toc-wrapper">
  <nav class="project-nav glass-effect" aria-label="Table of Contents">
    <div class="nav-header">
      <h2 class="nav-title">/contents/</h2>
    </div>
    <ul class="nav-list">
      {
        headings.map((h2) => (
          <li class="nav-item">
            <details class="nav-details">
              <summary class="nav-h2">
                <span class="toggle-icon">+</span>
                <a href={`#${h2.slug}`}>{h2.text}</a>
              </summary>
              {h2.subheadings.length > 0 && (
                <ul class="nav-sublist">
                  {h2.subheadings.map((h3) => (
                    <li class="nav-subitem">
                      <a href={`#${h3.slug}`}>
                        <span class="bullet" />
                        {h3.text}
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </details>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<style>
  .toc-wrapper {
    position: sticky;
    top: 30rem;
    height: fit-content;
    max-height: calc(100vh - 4rem);
  }

  .project-nav {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid rgba(var(--theme-current-rgb), 0.9);
    border-left: none;
    transition: border-color 0.3s ease;
  }

  .nav-header {
    padding: 1rem;
    border-bottom: 1px solid rgba(var(--theme-current-rgb), 0.1);
    background: rgba(255, 255, 255, 0.9);
  }

  .nav-title {
    font-family: "Space Mono", monospace;
    font-size: 0.875rem;
    color: var(--text-primary);
    margin: 0;
  }

  .nav-list {
    list-style: none;
    /* padding: 1rem; */
    margin: 0;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
  }

  .nav-item:not(:last-child) {
    /* margin-bottom: 0.5rem; */
  }

  .nav-h2 {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.2rem;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .nav-h2:hover {
    background: rgba(var(--theme-current-rgb), 0.05);
  }

  .toggle-icon {
    font-family: "Space Mono", monospace;
    font-size: 0.75rem;
    color: var(--text-secondary);
    opacity: 0.5;
    transition: transform 0.3s ease;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-details[open] .toggle-icon {
    transform: rotate(45deg);
  }

  .nav-h2 a {
    font-family: "Space Mono", monospace;
    font-size: 0.875rem;
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-sublist {
    list-style: none;
    padding: 0.25rem 0 0.25rem 2rem;
    margin: 0;
  }

  .nav-subitem {
    margin: 0.25rem 0;
  }

  .nav-subitem a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-family: "Work Sans", sans-serif;
    font-size: 0.875rem;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .nav-subitem a:hover {
    background: rgba(var(--theme-current-rgb), 0.05);
    color: var(--text-primary);
  }

  .bullet {
    width: 4px;
    height: 4px;
    background: rgba(var(--theme-current-rgb), 0.5);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .nav-subitem a:hover .bullet {
    opacity: 1;
  }

  /* Custom scrollbar */
  .nav-list {
    scrollbar-width: thin;
    scrollbar-color: rgba(var(--theme-current-rgb), 0.2) transparent;
  }

  .nav-list::-webkit-scrollbar {
    width: 4px;
  }

  .nav-list::-webkit-scrollbar-thumb {
    background: rgba(var(--theme-current-rgb), 0.2);
    border-radius: 4px;
  }

  @media (max-width: 1024px) {
    .toc-wrapper {
      position: relative;
      top: 0;
      margin-bottom: 2rem;
    }

    .nav-list {
      max-height: none;
    }
  }
</style>

<script>
  // Smooth scroll behavior
  document.querySelectorAll(".nav-subitem a, .nav-h2 a").forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const targetId = link.getAttribute("href")?.slice(1);
      if (targetId) {
        const targetElement = document.getElementById(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: "smooth" });
          history.pushState(null, "", `#${targetId}`);
        }
      }
    });
  });
</script>
