---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { Tags, GalleryGrid, Modal } from "../../components";

const allExperiments = await getCollection("experiments");

const experiments = import.meta.env.PROD
  ? allExperiments.filter((experiment) => !experiment.data.draft)
  : allExperiments;
---

<Layout title="experiments & Experiments" withCont={true} pageType="experiment">
  <div class="experiments-container">
    <div class="header-title">
      <h2>Experiments, side projects, and creative explorations</h2>
      <p>You'll find a mix of 3d printing, hardware, software, and design</p>
      <Tags experiments={experiments} />
    </div>

    <div class="gallery-grid">
      {
        experiments.map((experiment, index) => (
          <GalleryGrid experiment={experiment} index="" />
        ))
      }
    </div>
  </div>

  <Modal experiments={experiments} />
</Layout>

<style>
  .experiments-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 1rem;
    background-color: #ffffff;
    color: #1a1a1a;
  }

  .experiments-header {
    padding: 5rem 0 4rem;
    position: relative;
  }

  .overline {
    font-family: "Inter", sans-serif;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    color: #888;
    font-weight: 500;
    text-transform: uppercase;
  }

  .header-title {
    h2 {
      font-size: 2.2rem;
      margin: 2rem 0;
    }

    max-width: 700px;
    font-weight: 300;
    color: #1a1a1a;
    padding: 1rem;
    min-height: 30vh;
    height: 50vh;
  }

  .gallery-grid {
    column-count: 3;
    column-gap: 1rem;
    padding: 2rem 0;
  }

  .item-tags {
    position: absolute;
    bottom: 8px;
    left: 8px;
    right: 8px;
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    pointer-events: none;
  }

  @keyframes pulse {
    0% {
      opacity: 0.3;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0.3;
    }
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .experiments-container {
      padding: 0 1rem;
    }

    .experiments-header {
      margin: 3rem 0 2rem;
    }

    .header-title {
      font-size: 1.75rem;
    }

    .gallery-grid {
      column-count: 2;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      column-count: 1;
    }
  }
</style>
